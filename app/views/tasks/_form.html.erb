<p class="text-sm text-darkslategray my-2">Add a task as: <%= current_user.name%></p>

<%= form_for([@event, @task], remote: true) do |f| %>
    <div class="relative">
        <%= f.hidden_field :reply, class: "input h-32 border  border-gray resize-none", placeholder: "Add any details about the event here" %>

        <trix-editor input="task_reply" id="task_reply_trix" class="h-32 p-3"></trix-editor>


        <%= f.submit class: "btn btn-small btn-secondary block w-full text-center mt-2 lg: mt-0 lg:text-left lg:absolute lg:pin-b lg:pin-r
        lg:mb-2 lg:mr-2 lg:w-auto lg:inline-flex" %>
        <br>
    </div>
<% end %>