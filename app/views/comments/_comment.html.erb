<div class="flex items-start p-4 mt-4 border rounded">
  <div class="flex-1 pl-4 flex items-start justify-between">
    <div class="leading-normal">
    <%# Sanitizes user input to protect against attacks such as XSS scripting %>
      <p class="text-grey-dark text-xs"><strong><%= comment.user.name %></strong> commented <%= time_ago_in_words(comment.created_at) %> ago</p>
      <div class="text-grey-darkest"><%= sanitize comment.reply %></div>
    </div>

    <% if author_of(comment) %>
      <%= link_to "Delete", event_comment_path(comment.event, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-destroy" %>
    <% end %>
  </div>
</div>