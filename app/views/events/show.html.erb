<div class="max-w mx-10 my-10 m-auto">
  <div class="p-5 bg-white border border-gray rounded">
    <div class="flex flex-wrap justify-between items-center mb-5">
      <h1 class="font-bold text-xl"><%= @event.name %></h1>
      <%= link_to "Cancel Event", event_path(@event), method: :delete, data: {confirm: "Are you sure you want to cancel this event?"},
      class: "btn btn-destroy" if admin? %>
    </div>

    <div class="border p-6 bg-grey-lighter mb-5 flex items-center justify-between">
      <p class="border-2 py-3 px-4 border-indigo-700 rounded-full text-sm text-indigo">
        Start time: <span class="font-bold"><%= readable_time(@event.start_time)%></span>
      </p>
      
      <div class="border-t-4 border-indigo-700 border-dashed max-h-2 flex-1"></div>

      <p class="border-2 py-3 px-4 border-indigo-700 rounded-full text-sm text-indigo">
        End time: <span class="font-bold"><%= readable_time(@event.end_time) %></span>
      </p>
    </div>

    <h4 class="font-bold text-lg">Comments</h4>
    <hr class="border" />
    <% unless user_signed_in? %>
      <div class="bg-gray rounded p-4 mt-4 text-center">
        <p class="text-sm text-gray"><%= link_to "Login", new_user_session_path, class: "link"%>
        or <%= link_to "Sign up", new_user_registration_path, class: "link" %> to comment.</p>
      </div>
    <% else %>
      <%# Will be used to render the comments form so users can enter
       comments on the event as a form of notes etc. %>      
       <%= render 'comments/form' %>
    <% end %>

    <div id="comments">
      <%# will be used to render the comments for the given event %>
      <%= render @event.comments %>
    </div>

  </div>
</div>